@model IEnumerable<ControlEquipo.BL.Computadora>

@{
    ViewBag.Title = "ComputadorasAsignadas";
}

<h3 style="font-style:oblique; font-weight:bold">Computadoras asignadas a: <span style="font-size:large; font-style:italic;">@ViewBag.nombreEmpleado</span></h3>

<p>
    @Html.ActionLink("Nueva Computadora", "Crear", "Computadoras", new {empleadoId = @ViewBag.EmpleadoId}, new { @class = "btn btn-success" })
</p>
<table class="table table-hover table-responsive table-info">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.TipoComputadora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hostname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DirecionIP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Disponible)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoComputadora.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hostname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirecionIP)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Marca.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>

            
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>

            <td>
                @Html.ActionLink("Editar", "EditarComputadoraAsignada", "Empleados", new { id = item.Id, item.EmpleadoId}, new { @class = "btn btn-danger" })
                @Html.ActionLink("Detalle", "DetalleComputadoraAsignada", "Empleados", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Accesorios", "AccesoriosAsignados", "Computadoras", new { computadoraId = item.Id, empleadoId = item.EmpleadoId }, new { @class = "btn btn-success" })
            </td>
        </tr>

        
    }


   
</table>

<div>
    @Html.ActionLink("Regresar", "Index", "Empleados", null, new { @class = "btn btn-warning" })
</div>

